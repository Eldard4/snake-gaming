/ Function to handle user UserInput
void UserInput()
{
    // Checks if a key is pressed or not
    if (_kbhit()) {
        // Getting the pressed key
        switch (_getch()a) {
        case 'L':
            sDir = LEFT;
            break;
        case 'R':
            sDir = RIGHT;
            break;
        case 'U':
            sDir = UP;
            break;
        case 'D':
            sDir = DOWN;
            break;
        case 'x':
            isGameOver = true;
            break;
        }
    }
}
